<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#998888"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left"
            android:padding="10dp">

            <TextView
                android:id="@+id/viewSemester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021년 2학기"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/addSubject"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/add"
                android:padding="0dp" />

            <ImageButton
                android:id="@+id/selectSemester"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/settings"
                android:padding="0dp" />

            <ImageButton
                android:id="@+id/setting"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/settings"
                android:padding="0dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모바일 프로그래밍"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="채의근"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메모" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:minWidth="50dp"
                    android:text="9/6" />

                <TextView
                    android:minWidth="50dp"
                    android:text="9/13" />

                <TextView
                    android:minWidth="50dp"
                    android:text="9/27" />

                <TextView
                    android:minWidth="50dp"
                    android:text="10/4" />

                <TextView
                    android:minWidth="50dp"
                    android:text="10/11" />

                <TextView
                    android:minWidth="50dp"
                    android:text="10/18" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:minWidth="50dp"
                    android:text="O" />

                <TextView
                    android:minWidth="50dp"
                    android:text="X" />

                <TextView
                    android:minWidth="50dp"
                    android:text="O" />

                <TextView
                    android:minWidth="50dp"
                    android:text="O" />

                <TextView
                    android:minWidth="50dp"
                    android:text="X" />

                <TextView
                    android:minWidth="50dp"
                    android:text="X" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TextView android:text="9/6" />

                <TextView android:text="9/13" />

                <TextView android:text="9/27" />

                <TextView android:text="10/4" />

                <TextView android:text="10/11" />

                <TextView android:text="10/18" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TextView android:text="O" />

                <TextView android:text="X" />

                <TextView android:text="O" />

                <TextView android:text="O" />

                <TextView android:text="X" />

                <TextView android:text="X" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/add"
            android:padding="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="새로운 과목 추가하기"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>